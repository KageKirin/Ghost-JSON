{{#post}}
{
	"posts":[
		{{> post}}
	],

	{{!-- below not needed, as already included in post.author --}}
	"users":[
	{{#get "users" include="count" limit="all" filter="id:{{author.id}}"}}
		{{#foreach users}}
				{{> user}}
				{{#unless @last}},{{/unless}}
		{{/foreach}}
	{{/get}}
	],

	"meta":{{> meta}}
}
{{/post}}
