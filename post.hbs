{
	"blog" :
	{
		{{> blog-common}}
	},


	"post":
	{
		{{#post}}
		{{> post-details}},
		"author":
		{
			{{#author}}
				{{> generic-summary}}
			{{/author}}
		},
		"tags":
		[
			{{#foreach tags}}
			{
				{{> generic-summary}}
			}{{#unless @last}},{{/unless}}
			{{/foreach}}
		]
		{{/post}}
	}

}
