{
	"blog" :
	{
		{{> blog-common}}

		"posts":
		[
			{{#foreach posts}}
			{
				{{> post-summary}},
				{{!-- "excerpt": "{{excerpt}}", --}}	{{! not needed. left here for completeness}}
				{{!-- "content": "{{content}}",	--}}	{{! depending on post loading approach, not required here}}
				"author":
				{
					{{#author}}
						{{> generic-summary}}
					{{/author}}
				},
				"tags":
				[
					{{#if tags}}
						{{#foreach tags}}
						{
							{{> generic-summary}}
						}{{#unless @last}},{{/unless}}	{{! maybe more required}}
						{{/foreach}}
					{{/if}}
				]
			}{{#unless @last}},{{/unless}}
			{{/foreach}}
		]
	}
}
