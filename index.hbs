{
	"blog" :
	{
		"url" = "{{@blog.url}}",
		"title" = "{{@blog.title}}",
		"description" = "{{@blog.description}}",
		"logo" = "{{@blog.logo}}",
		"cover" = "{{@blog.cover}}",
		"navigation" = "{{@blog.navigation}}",

		"posts":
		[
			{{#foreach posts}}
			{
				"id": "{{id}}",
				"title": "{{title}}",
				"slug": "{{slug}}",
				{{!-- "excerpt": "{{excerpt}}", --}}	{{! not needed. left here for completeness}}
				"content": "{{content}}",	{{! depending on post loading approach, not required here}}
				"url": "{{url}}",
				"image": "{{image}}",
				"featured": "{{featured}}",
				"page": "{{page}}",
				"meta_title": "{{meta_title}}",
				"meta_description": "{{meta_description}}",
				"published_at": "{{published_at}}",
				"updated_at": "{{updated_at}}",
				"created_at": "{{created_at}}",
				"author":
				{
					{{#author}}
						"id": "{{id}}",
						"name": "{{name}}",
						"slug": "{{slug}}",
						"url": "{{url}}"
					{{/author}}
				},
				"tags":
				[
					{{#foreach tags}}
						"{{tag.name}}"{{#unless @last}},{{/unless}}	{{! maybe more required}}
					{{/foreach}}
				]
			}{{#unless @last}},{{/unless}}
			{{/foreach}}
		],

		"tags":
		[
			{{#foreach tags}}	{{! depending on tag loading approach, not entirely required here}}
			{
				"id": "{{id}}",
				"name": "{{name}}",
				"slug": "{{slug}}",
				"description": "{{description}}",
				"image": "{{image}}",
				"meta_title": "{{meta_title}}",
				"meta_description": "{{meta_description}}",
				"url": "{{url}}"
			}{{#unless @last}},{{/unless}}
			{{/foreach}}
		]
	}
}
